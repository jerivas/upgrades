{
  "name": "oddbird-books",
  "title": "OddBooks",
  "version": "1.0.0-alpha.1",
  "description": "revenge of the oddbooks editor",
  "homepage": "/",
  "repository": {
    "type": "git",
    "url": "https://github.com/oddbird/books.git"
  },
  "private": true,
  "engines": {
    "node": "^16",
    "yarn": "^1.22"
  },
  "scripts": {
    "serve": "run-p django:serve vue:serve",
    "serve:prod": "run-s prod django:serve",
    "prod": "vue-cli-service build",
    "build": "vue-cli-service build --mode development",
    "test:frontend": "run-p test:sass test:js:ci",
    "test": "run-s test:sass test:py test:js",
    "lint": "run-p lint:py lint:js lint:sass lint:other",
    "lint:ci": "run-p lint:py:ci lint:js:ci lint:sass:ci",
    "django:serve": "python manage.py runserver 0.0.0.0:${PORT:-8000}",
    "django:serve:prod": "gunicorn books.wsgi:application --bind :${PORT:-8000} --worker-tmp-dir /dev/shm",
    "vue:serve": "vue-cli-service serve --port 3000",
    "test:js": "vue-cli-service test:unit",
    "test:js:watch": "vue-cli-service test:unit --watchAll",
    "test:js:ci": "JEST_JUNIT_OUTPUT_DIR='./coverage' vue-cli-service test:unit --ci --runInBand --reporters=default --reporters=jest-junit",
    "test:py": "pytest",
    "test:sass": "mocha tests/sass/test_sass.js",
    "black": "black manage.py config/ books/ mypy-stubs/",
    "flake8": "flake8 manage.py config/ books/",
    "isort": "isort manage.py config/ books/ mypy-stubs/",
    "mypy": "mypy config/ books/",
    "pyupgrade": "pyupgrade --py310-plus '**/*.py'",
    "lint:js": "vue-cli-service lint",
    "lint:js:ci": "vue-cli-service lint --no-fix",
    "lint:py": "run-s isort black flake8 mypy pyupgrade",
    "lint:py:ci": "run-s flake8 mypy",
    "lint:sass": "stylelint '**/*.scss' --fix",
    "lint:sass:ci": "stylelint '**/*.scss'",
    "lint:other": "prettier --write '**/*.{json,md,yml}'"
  },
  "dependencies": {
    "@sentry/vue": "^6.17.2",
    "@vueup/vue-quill": "^1.0.0-beta.7",
    "accoutrement": "^4.0.0-beta.3",
    "assert": "^2.0.0",
    "core-js": "^3.20.3",
    "cssremedy": "^0.1.0-beta.2",
    "date-fns": "^2.28.0",
    "difflib": "^0.2.4",
    "js-cookie": "^3.0.1",
    "lodash": "^4.17.21",
    "uuid": "^8.3.2",
    "vue": "^3.2.29",
    "vuex": "^4.0.2",
    "whatwg-fetch": "^3.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/vue": "^6.5.0",
    "@types/difflib": "^0.2.0",
    "@types/js-cookie": "^3.0.1",
    "@types/lodash": "^4.14.178",
    "@types/uuid": "^8.3.4",
    "@vue/cli-plugin-babel": "^5.0.0-0",
    "@vue/cli-plugin-eslint": "^5.0.0-0",
    "@vue/cli-plugin-typescript": "^5.0.0-0",
    "@vue/cli-plugin-unit-jest": "^5.0.0-0",
    "@vue/cli-plugin-vuex": "^5.0.0-0",
    "@vue/cli-service": "^5.0.0-0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vue/vue3-jest": "^27.0.0-0",
    "autoprefixer": "^10.4.2",
    "babel-jest": "^27.4.5",
    "date-fns-tz": "^1.2.2",
    "eslint": "^8.7.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-import-resolver-webpack": "^0.13.2",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-vue": "^8.3.0",
    "fetch-mock-jest": "^1.5.1",
    "jest": "^27.4.7",
    "jest-junit": "^13.0.0",
    "json-loader": "^0.5.7",
    "mocha": "^9.2.0",
    "mockdate": "^3.0.5",
    "node-fetch": "^2.6.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "sass": "^1.49.0",
    "sass-loader": "^12.4.0",
    "sass-true": "^6.0.1",
    "sassdoc": "^2.7.3",
    "sassdoc-theme-herman": "^4.0.2",
    "stylelint": "^14.3.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-prettier": "^2.0.0",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5",
    "vue-loader": "^17.0.0",
    "vue-svg-loader": "^0.17.0-0",
    "webpack": "^5.67.0"
  },
  "resolutions": {
    "@vue/cli-service/progress-webpack-plugin/**/ansi-regex": "^5.0.1",
    "sassdoc-theme-herman/**/marked": "^2.0.0",
    "sassdoc-theme-herman/typogr/mkdirp": "^0.5.5",
    "sassdoc/**/glob-parent": "^5.1.2",
    "sassdoc/**/marked": "^2.0.0",
    "sassdoc/**/semver-regex": "^3.1.3",
    "sassdoc/**/uglify-js": "^3.4.13",
    "tslib": ">=2",
    "vue-svg-loader/**/css-what": "^5.0.1",
    "vue-svg-loader/**/nth-check": "^2.0.1"
  }
}
