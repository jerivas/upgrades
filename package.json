{
  "name": "estimating-engine",
  "title": "Estimating Engine",
  "description": "Estimate and Quote Management Tool for General Stamping & Metalworks",
  "homepage": "/",
  "version": "0.1.0",
  "private": true,
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/oddbird/Estimating-Engine.git"
  },
  "engines": {
    "node": "^16",
    "yarn": "^1.22"
  },
  "scripts": {
    "serve": "run-p django:serve rq:serve vue:serve",
    "serve:prod": "npm-run-all prod -p django:serve rq:serve",
    "build": "vue-cli-service build --mode development",
    "prod": "vue-cli-service build",
    "test": "run-s test:sass test:js test:py",
    "lint": "run-p lint:py lint:js lint:sass lint:other",
    "lint:ci": "run-p flake8 lint:js:ci lint:sass:ci",
    "vue:serve": "vue-cli-service serve --port 3000",
    "django:serve": "python manage.py runserver 0.0.0.0:${PORT:-8000}",
    "django:serve:prod": "daphne --bind 0.0.0.0 --port ${PORT:-8000} --http-timeout ${HTTP_TIMEOUT:-30} estimating_engine.asgi:application",
    "redis:clear": "redis-cli -h redis FLUSHALL",
    "worker:serve": "python manage.py rqworker default",
    "rq:serve": "run-s redis:clear worker:serve",
    "flake8": "flake8 manage.py estimating_engine/ config/",
    "isort": "isort manage.py estimating_engine/ config/",
    "black": "black manage.py estimating_engine/ config/",
    "lint:js": "vue-cli-service lint",
    "lint:py": "run-s isort black flake8",
    "lint:sass": "stylelint '**/*.scss' --fix",
    "lint:js:ci": "vue-cli-service lint --no-fix",
    "lint:sass:ci": "stylelint '**/*.scss'",
    "lint:other": "prettier --write '**/*.{json,md,yml}'",
    "test:js": "vue-cli-service test:unit",
    "test:js:watch": "vue-cli-service test:unit --watchAll",
    "test:js:ci": "JEST_JUNIT_OUTPUT_DIR='./coverage' vue-cli-service test:unit --ci --runInBand --reporters=default --reporters=jest-junit",
    "test:js:check-coverage": "nyc check-coverage --temp-dir coverage",
    "test:py": "pytest",
    "test:py:check-coverage": "coverage report --fail-under=100",
    "test:sass": "mocha tests/sass/test_sass.js"
  },
  "dependencies": {
    "@oddbird/blend": "^0.2.3",
    "@sentry/tracing": "^6.19.6",
    "@sentry/vue": "^6.19.6",
    "accoutrement": "^4.0.1",
    "core-js": "^3.21.1",
    "cssremedy": "^0.1.0-beta.2",
    "date-fns": "^2.28.0",
    "date-fns-tz": "^1.3.3",
    "js-cookie": "^3.0.1",
    "lodash": "^4.17.21",
    "sockette": "^2.0.6",
    "uuid": "^8.3.2",
    "vue": "^3.2.32",
    "vue-router": "^4.0.14",
    "vuex": "^4.0.2",
    "whatwg-fetch": "^3.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/vue": "^6.5.1",
    "@types/js-cookie": "^3.0.1",
    "@types/lodash": "^4.14.181",
    "@types/uuid": "^8.3.4",
    "@vue/cli-plugin-babel": "^5.0.4",
    "@vue/cli-plugin-eslint": "^5.0.4",
    "@vue/cli-plugin-router": "^5.0.4",
    "@vue/cli-plugin-typescript": "^5.0.4",
    "@vue/cli-plugin-unit-jest": "^5.0.4",
    "@vue/cli-plugin-vuex": "^5.0.4",
    "@vue/cli-service": "^5.0.4",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vue/vue3-jest": "^27.0.0-0",
    "autoprefixer": "^10.4.4",
    "babel-jest": "^27.5.1",
    "eslint": "^8.13.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-import-resolver-webpack": "^0.13.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.4",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-vue": "^8.6.0",
    "fetch-mock-jest": "^1.5.1",
    "flush-promises": "^1.0.2",
    "jest": "^27.5.1",
    "jest-junit": "^13.1.0",
    "json-loader": "^0.5.7",
    "mocha": "^9.2.2",
    "mockdate": "^3.0.5",
    "node-fetch": "^2.6.7",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "postcss": "^8.4.12",
    "prettier": "2.6.2",
    "sass": "^1.50.0",
    "sass-loader": "^12.6.0",
    "sass-true": "^6.1.0",
    "sassdoc": "^2.7.3",
    "sassdoc-theme-herman": "^4.0.2",
    "stylelint": "^14.6.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-prettier": "^2.0.0",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3",
    "vue-loader": "^17.0.0",
    "vue-router-mock": "^0.1.7",
    "vue-svg-loader": "^0.17.0-0",
    "webpack": "^5.72.0"
  },
  "resolutions": {
    "tslib": ">=2"
  }
}
